<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? content_for(:title) : "Beakr 2.0 Capstone" %></title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper"> <!-- body wrapper -->
      <div class="page-wrapper"> <!-- Main content wrapper -->
        <%= render '/layouts/nav' %>
        <div class="container-fluid">
          <%= render '/layouts/breadcrumbs' %>
          <%= yield %>
        </div>
      </div>
    </div>

      <div class="footer">
        <p class="Copyright">&copy; DevPoint Labs 2014</p>
        <p class="Copyright"><%= link_to 'About', about_path %> | <%= link_to 'Contact', contact_path %></p>
      </div>

  </body>

</html>
