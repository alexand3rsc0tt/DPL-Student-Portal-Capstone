<h1>Listing conversations</h1>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>User</th>
      <th>Title</th>
      <th>Last commenter</th>
      <th>Last comment at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board.conversations.each do |conversation| %>
      <tr>
        <td><%= conversation.board.title %></td>
        <td><%= conversation.user.first_name %></td>
        <td><%= conversation.title %></td>
        <td><%= conversation.last_commenter_id %></td>
        <td><%= conversation.last_comment_at %></td>
        <td><%= link_to 'Show', board_conversation_path(@board, conversation) %></td>
        <td><%= link_to 'Edit', edit_board_conversation_path(@board, conversation) %></td>
        <td><%= link_to 'Destroy', board_conversation_path(@board, conversation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conversation', new_board_conversation_path(@board) %>
