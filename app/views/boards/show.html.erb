<% title @board.title  %>

<table>
  <tr>
    <th width="60%">Conversation Title</th>
    <th width="10%">Comments</th>
    <th width="30%">Last Comment</th>
  </tr>
  <% for conversation in @board.conversations %>
    <tr>
      <td><%= link_to h(conversation.title), conversation_path(conversation.id) %>
      <td><%= conversation.comments - 1 %></td>
      <td class="right"></td>
      <td><%= link_to "Show", conversation %></td>
      <td><%= link_to "Edit", edit_conversation_path(conversation.id) %></td>
      <td><%= link_to "Destroy", conversation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Conversation", new_board_conversation_path(@board) %></p>
