<table class="table">
  <tr>
    <th width="70%">Discussion Boards</th>
    <th width="30%">Last Comment</th>
  </tr>
  <% for board in @boards %>
    <tr>
      <td><h4><%= link_to h(board.title), board_path(board.id) %></h4>
        <small><%= board.conversations.count %> conversations</small><br /></td>
      <td class="right">
        <%= current_user.first_name %>
      </td>
      <td><%= link_to "Edit", edit_board_path(board) %></td>
      <td><%= link_to "Destroy", board, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<div id="modalDiv">
<!-- <div class="actions"> -->
  <%= button_to "New Board", new_board_path, :class => "btn btn-default", method: 'get', remote: true %>
  <!-- </div> -->
</div>
