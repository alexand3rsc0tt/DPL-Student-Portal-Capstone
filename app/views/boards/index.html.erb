<table>
  <tr>
    <th width="70%">Discussion Boards</th>
    <th width="30%">Last Comment</th>
  </tr>
  <% for board in @boards %>
    <tr>
      <td><h4><%= link_to h(board.title), board_path(board.id) %></h4>
        <small><%= board.conversations.count %> conversations</small><br /></td>

      <td class="right">

      </td>

<td><%= link_to "Show", board %></td>
<td><%= link_to "Edit", edit_board_path(board) %></td>
<td><%= link_to "Destroy", board, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Board", new_board_path %></p>
