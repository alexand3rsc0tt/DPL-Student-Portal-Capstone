<%- page_header 'Staff Members' %>
<p>This is just a temporary view. This will become the index page for staff members.</p>


<table class='table table-hover'>
  <thead>
    <tr>
      <th>Staff First Name</th>
      <th>Staff Last Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= link_to 'View', [:staff, member], class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_staff_member_path(member), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Delete', [:staff, member], class: 'btn btn-xs btn-default', method: :delete, 
                                            data: { 
                                                    confirm: 'Are you sure you want to '\
                                                             'delete this location?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
