<%- page_header @member.first_name + ' ' + @member.last_name %>
<div class="row">
  <div class="col-md-4">
    <img src="http://placehold.it/200x220" class="img-circle">
    <h4><%= @member.email %></h4>
    <p>Hometown: <%= @member.hometown %></p>
    <p>GitHub Username: <%= @member.github_profile.username if @member.github_profile %></p>
  </div>
  <div class="col-md-8">
    <%= button_to 'Edit Profile', edit_staff_member_path(@member),
                                  class: "btn btn-primary pull-right",
                                  method: :get%>
  </div>
</div>