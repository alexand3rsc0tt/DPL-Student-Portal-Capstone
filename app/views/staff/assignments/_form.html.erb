<%= form_for([:staff, @cohort, @assignment]) do |f| %>
<% if @assignment.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited
          this assignment from being saved:</h2>
      <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :name, 'Assignment Title:' %><br>
    <%= f.text_field :name, placeholder: 'Assignment Title', class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :description, 'Description:' %><br>
    <%= f.text_field :description, placeholder: 'Description', class: 'form-control input-lg' %>
  </div>  
  <div class= 'form-group'>
    <%= f.label :type, 'Category:' %><br>
    <%= f.f.select :type, [['Ruby', 'ruby'],
                           ['Rails', 'rails'],
                           ['JavaScript', 'javascript']],
                          class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :due_date, 'Due Date (in UTC):' %><br>
    <%= f.datetime_select :due_date, 
                          minute_step: 15, 
                          default: 1.day.from_now, 
                          order: [:month, :day, :year],
                          start_year: Time.now.year,
                          end_year: 1.year.from_now %>
  </div>


  <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  
  <%= link_to 'Back', staff_assignments_path, class: 'btn btn-danger' %>
<% end %>