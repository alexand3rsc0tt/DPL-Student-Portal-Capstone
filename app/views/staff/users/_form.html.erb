<%= form_for([:staff, @cohort, @student]) do |f| %>
<% if @student.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited
          this student from being saved:</h2>
      <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :first_name, 'First Name:' %><br>
    <%= f.text_field :first_name, placeholder: 'First Name', class: 'form-control input-lg' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :last_name, 'Last Name:' %><br>
    <%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control input-lg' %>
  </div>  
  <div class= 'form-group'>
    <%= f.label :email, 'Email:' %><br>
    <%= f.text_field :email, placeholder: 'Email', class: 'form-control input-lg' %>
  </div>
  <%= f.hidden_field(:temp_password) %>
  <%= f.hidden_field(:password) %>
  <%= f.hidden_field(:password_confirmation) %>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  
  <%= link_to 'Back', staff_cohorts_path, class: 'btn btn-primary' %>
<% end %>