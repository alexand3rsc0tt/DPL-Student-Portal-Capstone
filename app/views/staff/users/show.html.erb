<%- page_header 'Student Profile' %>
<div class="row">
  <div class="col-md-4">
    <img src="http://placehold.it/200x220" class="img-circle">
    <h2><%= @student.first_name + ' ' + @student.last_name %></h2>
    <h4><%= @student.email %></h4>
    <p>Hometown: <%= @student.hometown %></p>
    <p>GitHub: <%= @student.github_username %></p>
  </div>
  <div class="col-md-8">
    <%= button_to 'Back', staff_cohort_path(@student.cohort),
                          class: "btn btn-primary pull-right", method: :get%>
  </div>
</div>
