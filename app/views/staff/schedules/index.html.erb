<%- page_header 'Weekly Schedule' %>


<table class='table table-hover'>
  <thead>
    <tr>
      <th>Day of the Week</th>
      <th>Schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
     
        <td><%= schedule.day%></td>
        <td><%= schedule.description %></td>
        <td><%= link_to 'View', [:staff, schedule], class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_staff_schedule_path(schedule), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Delete', [:staff, schedule], class: 'btn btn-xs btn-default', method: :delete, 
                                            data: { 
                                                    confirm: 'Are you sure you want to '\
                                                             'delete this schedule?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Schedule', new_staff_schedule_path, class: 'btn btn-xs btn-primary' %>

