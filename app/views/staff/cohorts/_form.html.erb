 <%= form_for [:staff, @cohort] do |f| %>
  <!-- Check if there were any errors saving cohort and display them if so -->
  <% if @cohort.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@cohort.errors.count, "error") %> prohibited
          this cohort from being saved:</h2>
      <ul>
        <% @cohort.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :location_id, 'Location:' %><br>
    <%= f.select :location_id, Location.all.collect {|l| [l.name, l.id]} %>
  </div>  
  <div class= 'form-group'>
    <%= f.label :name, 'Cohort Name:' %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :starts_at, 'Cohort Start Date:' %><br>
    <%= f.date_select :starts_at, order: [:month, :day, :year], class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :ends_at, 'Cohort End Date:' %><br>
    <%= f.date_select :ends_at, order: [:month, :day, :year], class: 'form-control' %>
  </div>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  
  <%= link_to 'Back', staff_cohorts_path, class: 'btn btn-danger' %>
<% end %>