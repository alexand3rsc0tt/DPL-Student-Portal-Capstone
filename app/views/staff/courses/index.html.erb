<%- page_header 'Course Listing' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Course Duration</th>
      <th>Course Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= "#{course.duration} #{course.duration_unit}" %></td>
        <td>$<%= course.price %></td>
        <td><%= link_to 'View', [:staff, course], class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_staff_course_path(course), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Delete', [:staff, course], class: 'btn btn-xs btn-default', method: :delete, 
                                            data: { 
                                                  confirm: 'Are you sure you ' \
                                                           'want to delete this course?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Course', new_staff_course_path, class: 'btn btn-xs btn-primary' %>