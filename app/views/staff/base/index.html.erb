
<%= button_to "Add Cohort", new_staff_cohort_path, method: 'get', remote: true, class: 'btn btn-primary btn-sm' %><br><br>

<div id='modalDiv'></div>

<div class="row">
  <div class="col-lg-12">
    <% @cohorts.each do |cohort| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= cohort.location.name + ' ' + cohort.name %>
            </h3>
          </div>
          <div class="panel-body">
            <%= link_to 'Manage Students', staff_cohort_path(cohort) %><br>
            <%= link_to 'Manage Staff Members', staff_members_path %><br>
            <%= link_to 'Coursework', staff_cohort_assignments_path(cohort) %><br>
            <%= link_to 'Manage Repos', staff_cohort_repos_path(cohort) %><br>
            <%= link_to 'Events', root_path %><br>
            <%= link_to 'Web Resources', web_resources_path %><br>
          </div>
        </div>
      </div>   
    <% end %>
  </div>
</div>

 



  
